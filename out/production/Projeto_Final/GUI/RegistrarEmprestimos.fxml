<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="GUI.RegistrarEmprestimoController"
      style="-fx-padding: 20;" prefWidth="500" prefHeight="400">

    <Label text="Registrar Novo Empréstimo" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="campoEmail" promptText="Email do Membro" maxWidth="350"/>
    <TextField fx:id="campoTitulo" promptText="Título do Livro" maxWidth="350"/>

    <Button text="Registrar Empréstimo" onAction="#handleRegistrar" maxWidth="200"/>
    <Label fx:id="mensagemLabel" text="" wrapText="true" maxWidth="400" style="-fx-text-fill: #2a2a2a;" />

    <Button text="Voltar ao Menu" onAction="#handleVoltar" maxWidth="200"/>
</VBox>