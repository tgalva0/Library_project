<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="12" alignment="CENTER" fx:controller="GUI.MainMenuController"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      prefWidth="400" prefHeight="550" style="-fx-padding: 20;">

    <Label fx:id="nomeLabel"
           text="Olá, Bibliotecário!"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2a2a2a;" />

    <Button text="Procurar Livro por Título"       onAction="#handleBuscarPorTitulo"     maxWidth="Infinity"/>
    <Button text="Procurar Livro por Autor"         onAction="#handleBuscarPorAutor"      maxWidth="Infinity"/>
    <Button text="Procurar Membro por Email"        onAction="#handleBuscarMembro"        maxWidth="Infinity"/>
    <Button text="Procurar Empréstimo por Email"    onAction="#handleBuscarEmprestimo"    maxWidth="Infinity"/>
    <Button text="Registrar Empréstimo"             onAction="#handleRegistrarEmprestimo" maxWidth="Infinity"/>
    <Button text="Devolver Empréstimo"              onAction="#handleDevolverEmprestimo"  maxWidth="Infinity"/>
    <Button text="Registrar Livro"                  onAction="#handleRegistrarLivro"      maxWidth="Infinity"/>
    <Button text="Registrar Membro"                 onAction="#handleRegistrarMembro"     maxWidth="Infinity"/>
    <Button text="Remover Cópias de Livro"          onAction="#handleRemoverCopia"        maxWidth="Infinity"/>
    <Button text="Remover Membro"                   onAction="#handleRemoverMembro"       maxWidth="Infinity"/>
    <Button text="Atualizar Membro"                 onAction="#handleAtualizarMembro"     maxWidth="Infinity"/>

    <Separator />

    <Button text="Logout"                           onAction="#handleLogout"
            style="-fx-text-fill: red; -fx-font-weight: bold;" maxWidth="Infinity"/>
</VBox>