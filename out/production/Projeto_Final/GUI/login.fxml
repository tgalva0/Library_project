<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="GUI.LoginController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Senha:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="senhaField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Entrar" fx:id="loginButton" onAction="#handleLogin"
            GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label fx:id="mensagem" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>
